#!/usr/bin/env sh

# configure
set -e
set -u

# declare variables
curdir=$( cd "$( dirname "$0" )" && pwd )
rootdir="$curdir/../"

# script

# Include phinx config if present in app root
if [ -f  "$rootdir/phinx.config" ] ; then
    source "$rootdir/phinx.config"
fi

"$rootdir/vendor/bin/phinx" $@

