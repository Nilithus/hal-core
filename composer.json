{
    "name": "ql/hal-core",
    "description": "HAL 9000 shared components and domain resources",
    "license": "proprietary",
    "authors": [
        { "name": "IT Team Web Core", "email": "itteamwebcore@quickenloans.com" }
    ],

    "archive": {
        "exclude": [
            ".gitignore",
            "/bin",
            "/phpunit.xml.dist",
            "/testing"
        ]
    },
    "autoload": {
        "psr-4": {
            "QL\\Hal\\Core\\": "src/",
            "QL\\Hal\\Core\\Testing\\": "testing/src/",
            "QL\\Kraken\\Core\\": "src-kraken/"
        }
    },

    "require": {
        "php-64bit": ">=5.5",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "ext-pdo_mysql": "*",

        "doctrine/orm": "~2.5",
        "ql/mcp-common": "~1.0"
    },
    "require-dev": {
        "mockery/mockery": "*",
        "phpunit/phpunit": "*",
        "paragonie/random_compat": "~1.1",
        "robmorgan/phinx": "~0.5",
        "symfony/config": "*",
        "symfony/dependency-injection": "*",
        "symfony/yaml": "*"
    }
}
