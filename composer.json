{
    "name": "ql/hal-core",
    "description": "HAL9000 Shared Libraries, Services, Models, and Repositories",
    "license": "proprietary",
    "authors": [
        { "name": "IT Team Web Core", "email": "itteamwebcore@quickenloans.com" }
    ],

    "archive": {
        "exclude": [
            ".gitignore",
            "/bin",
            "/phpunit.xml.dist",
            "/testing"
        ]
    },
    "autoload": {
        "psr-4": {
            "QL\\Hal\\Core\\": "src/",
            "QL\\Hal\\Core\\Testing\\": "testing/src/",
            "QL\\Kraken\\Core\\": "src-kraken/"
        }
    },
    "repositories": [
        { "type": "composer", "url": "http://composer/" }
    ],

    "require": {
        "php-64bit": ">=5.5",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "ext-pdo_mysql": "*",

        "doctrine/orm": "~2.5",
        "ql/mcp-core": "^1.0.3"
    },
    "require-dev": {
        "mockery/mockery": "*",
        "phpunit/phpunit": "*",
        "robmorgan/phinx": "~0.4",
        "symfony/config": "*",
        "symfony/dependency-injection": "*",
        "symfony/yaml": "*"
    }
}
