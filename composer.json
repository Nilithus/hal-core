{
    "name": "hal/hal-core",
    "description": "Core domain entities and shared resources for Hal UI and Agent.",
    "license": "MIT",
    "authors": [
        { "name": "Steve Kluck", "email": "stevekluck@quickenloans.com" }
    ],

    "archive": {
        "exclude": [
            ".gitignore",
            "/bin",
            "/phpunit.xml.dist",
            "/testing"
        ]
    },
    "autoload": {
        "psr-4": { "Hal\\Core\\": "src/" }
    },
    "autoload-dev": {
        "psr-4": { "Hal\\Core\\Testing\\": "testing/src/" }
    },

    "require": {
        "php-64bit": "~5.6 || ~7.0",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_sqlite": "*",
        "ext-pdo_mysql": "*",

        "doctrine/orm": "~2.5.6",
        "ql/mcp-common": "~1.1"
    },
    "require-dev": {
        "mockery/mockery": "*",
        "phpunit/phpunit": "*",
        "paragonie/random_compat": "~1.1",
        "robmorgan/phinx": "~0.5",
        "symfony/config": "*",
        "symfony/dependency-injection": "*",
        "symfony/yaml": "*"
    }
}
