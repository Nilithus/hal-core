{
    "name": "ql/hal-core",
    "description": "HAL9000 Shared Libraries, Services, Models, and Repositories",
    "license": "proprietary",
    "authors": [
        {
            "name": "IT Team Web Core",
            "email": "itteamwebcore@quickenloans.com"
        }
    ],

    "archive": {
        "exclude": [
            ".gitignore",
            "/bin",
            "/phpunit.xml.dist",
            "/tests"
        ]
    },
    "autoload": {
        "psr-4": {
            "QL\\Hal\\Core\\": "src/",
            "QL\\Kraken\\Core\\": "src-kraken/"
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "http://composer/"
        }
    ],
    "require": {
        "doctrine/orm": ">=2.5",
        "ext-openssl": "*",
        "php-64bit": ">=5.4.0",
        "ql/mcp-core": "*",
        "ql/mcp-corp-account": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "robmorgan/phinx": "~0.4",
        "symfony/dependency-injection": "*",
        "symfony/config": "*",
        "symfony/yaml": "*"
    }
}
