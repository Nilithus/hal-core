{
    "name": "hal/hal-core",
    "description": "Core domain entities and shared resources for Hal UI and Agent.",
    "license": "MIT",
    "authors": [
        { "name": "Steve Kluck", "email": "steve@kluck.engineering" }
    ],

    "archive": {
        "exclude": [
            ".gitignore",
            "/bin",
            "/phpunit.xml.dist",
            "/tests"
        ]
    },
    "autoload": {
        "psr-4": { "Hal\\Core\\": "src" }
    },
    "autoload-dev": {
        "psr-4": { "Hal\\Core\\Testing\\": "tests/src" }
    },

    "bin": [
        "bin/hal-build-id",
        "bin/hal-random-id"
    ],

    "require": {
        "php-64bit": "~7.1",

        "ext-sodium":      "~2.0",
        "ext-pdo":         "*",
        "ext-pdo_mysql":   "*",
        "ext-pdo_pgsql":   "*",
        "ext-pdo_sqlite":  "*",
        "ext-zlib":        "*",

        "aws/aws-sdk-php": "^3.21.6",
        "doctrine/orm":    "~2.5.10",
        "ql/mcp-common":   "~1.1"
    },

    "require-dev": {
        "robmorgan/phinx": "~0.8",

        "symfony/config":               "~3.3",
        "symfony/dependency-injection": "~3.3",
        "symfony/yaml":                 "~3.3",

        "mockery/mockery":              "~0.9",
        "phpunit/phpunit":              "~6.2",
        "overtrue/phplint":             "~0.2",
        "squizlabs/php_codesniffer":    "~3.0"
    }
}
